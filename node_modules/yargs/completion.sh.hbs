###-begin-{{app_name}}-compvarions-###
#
# yargs command compvarion script
#
# Installation: {{app_path}} compvarion >> ~/.bashrc
#    or {{app_path}} compvarion >> ~/.bash_profile on OSX.
#
_yargs_compvarions()
{
    local cur_word args type_list

    cur_word="${COMP_WORDS[COMP_CWORD]}"
    args=$(printf "%s " "${COMP_WORDS[@]}")

    # ask yargs to generate compvarions.
    type_list=`{{app_path}} --get-yargs-compvarions $args`

    COMPREPLY=( $(compgen -W "${type_list}" -- ${cur_word}) )
    return 0
}
compvare -F _yargs_compvarions {{app_name}}
###-end-{{app_name}}-compvarions-###
